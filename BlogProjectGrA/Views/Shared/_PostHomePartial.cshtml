@using BlogProjectGrA.Services
@model BlogProjectGrA.Models.Post
@using BlogProjectGrA.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<div class="card">
    <div class="card-header">
        <h3><a asp-controller="Post" asp-action="Details" asp-route-id="@Model?.Id" style="align-self:center; text-decoration: none; color: #000000;">@Model.Title</a> <span data-bs-toggle="tooltip" data-bs-placement="bottom" title="Post created" style="float:right; font-size:16px">@Model.CreateAt</span></h3>
    </div>
    <h5 class="card-body" style="background-color:white">
        <div class="badge badge-pill badge-primary" style="color:black; background-color:whitesmoke;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Views">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 18 18">
                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
            </svg> @Model.View
        </div>
        <div class="badge badge-pill badge-primary" style="color:black; background-color:whitesmoke;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Comments">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-text" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
            </svg> @Model.Comments.Count
        </div>
        <span>
            @if (Model.UpdateAt != null)
            {
                <span style="font-size:12px; float:right">(Edited @Model.UpdateAt)</span>
            }
        </span>
    </h5>
    <div class="card-body">

        <blockquote class="blockquote mb-0">
            <div>
            @if (Model.Body.Length <= 150)
                {
                    <span>@Model.Body</span>
                }
                else
                {
                    <span>@Model.Body.Substring(0, 150)...</span>
                }
                </div>
                <br />
            <footer class="blockquote-footer">Blogger <cite title="Authors name">@Model.Blog.Author.FirstName @Model.Blog.Author.LastName</cite></footer> @*???*@
        </blockquote>
    </div>
</div>
<div class="card-header;col-md-6; badge badge-primary;" style="font-size:18px;">
    <span style="color:black;">Tags: </span>
    @foreach (var tag in Model.Tags)
    {
        <partial name="_TagsPartial" model="tag"></partial>
    }
</div>
