@model BlogProjectGrA.Models.Comment

<div class="row" style="padding: 10px; margin: 30px 5px; border: 2px solid black; box-shadow: 5px 5px 10px yellow">
    <div class="col-md-11" style=" margin: 30px 0px; border: 1px solid black">
        <br />
        <h5 style="display:inline"><b>Author</b> <span style="display:inline;float:right"><b>Date</b></span></h5>
        <h5 class="card bg-primary text-white text-center"style="width:250px; box-shadow: inset 5px 5px 10px green ">
             @Model.Author
        </h5>
        <div style="display:inline;float:right">  
        <h5 class="card bg-primary text-white text-center"style="width:250px; box-shadow: inset 5px 5px 10px green">
             @Model.CreatedAt
        </h5>
        </div>

        <br />
        <br />
        <h5 style="display:inline"><b>Comment</b></h5>
        <h5 class="card-body" style="width:700px; box-shadow:inset 5px 5px 10px red">
             @Model.Body </h5>
                <br />

        <div class="row">
    <div class="col-md-4">

        <br />
                @if (Model.UpdatedAt != null)
                {
                    @Model.UpdatedAt
                }
                <a asp-action="Edit" asp-controller="Comment" asp-route-id="@Model?.Id" class="btn btn-primary ">Edit comment</a>
    </div>
</div>
         
    </div>  
</div>
<br /><br />