@using BlogProjectGrA.Services
@using BlogProjectGrA.Models
@model BlogProjectGrA.Models.Blog
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager






<div class="card mb-3">
    <div style="padding-top:15px">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <a asp-action="Details" asp-controller="BrowseBlog" asp-route-id="@Model.Id">
                <img class="img-fluid card  mx-auto d-block" style="height:300px;width:auto;object-fit:scale-down;object-position:center;" src="~/@Model.ImageUrl">
            </a>
        }
       
    </div>
    <div class="card-body">
        <div class="badge badge-pill badge-primary" style="color:black; background-color:whitesmoke; float:left; position:center;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Views">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-eye" viewBox="0 0 18 18">
                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
            </svg> @Model.Posts.Sum(p => p.View)
        </div>
        <a asp-action="Details" asp-controller="BrowseBlog" asp-route-id="@Model.Id" style="text-decoration: none; color:black;">
        <h5 class="card-title">&ensp;@Model.Title</h5>
            <p class="card-text">
                @if (Model.Body.Length >= 50)
                {
                    <i>@Model.Body.Substring(0, 150)...</i>
                }
                else
                {
                    <i>@Model.Body</i>
                }
            </p>
        <p class="card-text"><small class="text-muted">Created: @Model.CreatedAt</small></p>
        </a>
    </div>
</div>

