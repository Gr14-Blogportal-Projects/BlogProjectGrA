@model BlogProjectGrA.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete comment</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Comment:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
    </dl>
    <br />
    <h3>Are you sure you want to delete this comment?</h3>
    &ensp;
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PostsId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &ensp;
        <a class="btn btn-outline-primary" asp-controller="Post" asp-action="Details" asp-route-id="@Model.Posts.Id">Back to Post</a>
    </form>
</div>
