@*@model BlogProjectGrA.Models.Post*@
@model IEnumerable<BlogProjectGrA.Models.Post>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Browse posts by views";
}

<h1>Browse posts by views</h1>
<hr />

<p>
    <a class="btn btn-outline-primary" asp-action="Index">Browse all Blogs</a>
    &nbsp;
    <a class="btn btn-outline-primary" asp-action="Tags">Browse posts by tags</a>
</p>

<table class="table rounded border border-dark" style="background-color:white">
    @if (Model != null)
    {
       <tbody>
        @foreach(var item in Model)
        {
            <partial name="_PostPartial" model="item"></partial>
        }
        </tbody>
    }
    else
    {
        <h3>No posts were found.</h3>
    }

</table>