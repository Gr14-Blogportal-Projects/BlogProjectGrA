@model BlogProjectGrA.Models.ViewModels.CreateBlogVM

@{
    ViewData["Title"] = "Create";
}

@if (TempData["Message"] != null)
{
<div class="alert alert-warning" role="alert">
  @((string)TempData["Message"])
</div>
}
<h1>Create a Blog</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Body" class="control-label"></label>
                <textarea asp-for="Blog.Body" class="form-control"></textarea>
                <span asp-validation-for="Blog.Body" class="text-danger"></span>
            </div>
           <div class="form-group mt-3" onchange="setFileName()" >
                <input accept="image/*" asp-for="File" hidden />
                <input class="form-control" disabled asp-for="FileName">
                <span asp-validation-for="FileName" class="text-danger"></span>
                @*<span>&ensp;</span>*@
                @*<input class="btn btn-outline-success" type="submit" value="Upload Image" />*@
                <button type="button" class="btn btn-success mt-3" onClick="clickFileInput()">Select File</button>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Blog" class="btn btn-primary" style="margin: 15px 0px"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        const setFileName = () => {
            const fileName = document.getElementById("File").value;
            document.getElementById("FileName").value = fileName.substring(12);
        }

        const clickFileInput = () => {
            document.getElementById("File").click();
        }
    </script>
}
